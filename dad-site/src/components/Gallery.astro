<style>
  .carousel {
    position: relative;
    height: 30rem;
    width: 100%;
    max-width: 20rem;
    margin-bottom: 0.5rem;
    /* border: 2px solid var(--color-accent); */
    border-radius: 0.25rem;
    border: solid var(--color-accent);
  }

  .viewport {
    isolation: isolate;
  }

  .carousel-item {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 25px 50px;
    opacity: 0;
    transition: all 0.5s ease-in-out;
  }

  .arrow {
    border: solid var(--color-accent);
    border-width: 0 3px 3px 0;
    display: inline-block;
    padding: 0.75rem;
  }

  .arrow-prev {
    left: 0.75rem;
    position: absolute;
    top: 50%;
    transform: translateY(-50%) rotate(135deg);
  }

  .arrow-next {
    right: 0.75rem;
    position: absolute;
    top: 50%;
    transform: translateY(-50%) rotate(-45deg);
  }

  [id^="item"] {
    display: none;
  }

  .item-1 {
    z-index: 2;
    opacity: 1;
    background: url("/imgs/capstone/home.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .item-2 {
    background: url("/imgs/capstone/details.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .item-3 {
    background: url("/imgs/capstone/trends.png");
    background-size: contain;
