    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .item-5 {
    background: url("/imgs/capstone/inventory.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .item-6 {
    background: url("/imgs/capstone/list.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .item-7 {
    background: url("/imgs/capstone/login.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .item-8 {
    background: url("/imgs/capstone/profile.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .item-9 {
    background: url("/imgs/capstone/qrcode.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  *:target ~ .item-1 {
    opacity: 0;
  }

  #item-1:target ~ .item-1 {
    opacity: 1;
  }

  #item-2:target ~ .item-2,
  #item-3:target ~ .item-3,
  #item-4:target ~ .item-4,
  #item-5:target ~ .item-5,
  #item-6:target ~ .item-6,
  #item-7:target ~ .item-7,
  #item-8:target ~ .item-8,
  #item-9:target ~ .item-9 {
    z-index: 3;
    opacity: 1;
  }
</style>
